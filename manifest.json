{
    "manifest_version": 3,
    "name": "Resume Extension",
    "version": "1.0",
    "description": "A web extension to match the user's resume with job postings from gmu's email and handshake.",
    "content_scripts": [
        {
          "js": ["scripts/content.js", "scripts/string-similarity.min.js"],
          "matches": ["https://*.joinhandshake.com/*"]
        }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "/images/icon-128.png"
      }
    },
    "permissions": [
      "storage",
      "unlimitedStorage",
      "tabs"
    ]
}